#!/usr/bin/env sh

##############################################################################
##
##  Gradle start up script for UN*X
##
##############################################################################

# Attempt to set APP_HOME
APP_PATH=$(dirname "$0")
APP_HOME=$(cd "$APP_PATH" && pwd)

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
else
    JAVACMD="java"
fi

if [ ! -x "$JAVACMD" ] ; then
    echo "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH." >&2
    exit 1
fi

# Increase the maximum file descriptors if possible
if [ "$cygwin" = "false" -a "$darwin" = "false" ] ; then
    MAX_FD_LIMIT=$(ulimit -H -n)
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        ulimit -n $MAX_FD >/dev/null 2>&1
        if [ $? -ne 0 ] ; then
            echo "Could not set maximum file descriptor limit: $MAX_FD" >&2
        fi
    else
        echo "Could not query maximum file descriptor limit: $MAX_FD_LIMIT" >&2
    fi
fi

# For Cygwin, switch paths to Windows format before running java
case "$(uname)" in
    CYGWIN* )
        APP_HOME=$(cygpath --path --mixed "$APP_HOME")
        CLASSPATH=$(cygpath --path --mixed "$CLASSPATH")
        JAVACMD=$(cygpath --unix "$JAVACMD")
    ;;
esac

GRADLE_OPTS="${GRADLE_OPTS:--Dfile.encoding=UTF-8}"

exec "$JAVACMD" $GRADLE_OPTS -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"

